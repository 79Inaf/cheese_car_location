{% extends 'base.html.twig' %}

{% block title %}Vehicle index
{% endblock %}

{% block body %}

	<h1 class="text-center m-3">Toutes nos voitures</h1>
	<div class="ms-3 mb-3">
	{{ form_start(form) }}
	{{ form_widget(form) }}
	</div>
	<button class="btn btn-warning ms-3" type="submit">Chercher</button>
	{{ form_end(form) }}

	<table class="table mt-5">
		<thead>
			<tr class="bg-warning">
				<th>Type</th>
				<th>NombrePlaces</th>
				<th>Annee</th>
				<th>BoiteVitesse</th>
				<th>Energie</th>
				<th>Marque</th>
				<th>Photo</th>
				<th>Kilometrage</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for vehicle in vehicles %}
				<tr>
					<td>{{ vehicle.type }}</td>
					<td>{{ vehicle.nombrePlaces }}</td>
					<td>{{ vehicle.annee }}</td>
					<td>{{ vehicle.boiteVitesse }}</td>
					<td>{{ vehicle.energie }}</td>
					<td>{{ vehicle.marque }}</td>
					<td><img class="vehiclePicture" src="{{ vehicle.photo }}"></td>
					<td>{{ vehicle.kilometrage }}</td>
					<td>
						<a class="btn btn-warning col-6 m-2" href="{{ path('app_vehicle_show', {'id': vehicle.id}) }}">Voir</a>
						{% if is_granted('ROLE_OWNER') %}
							{% if app.user.id == vehicle.owner.id %}
								<a class="btn btn-warning col-6 m-2" href="{{ path('app_vehicle_edit', {'id': vehicle.id}) }}">Modifier</a>
							{% endif %}
						{% endif %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10">Pas de données trouvées</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a class="btn btn-warning" href="{{ path('app_vehicle_new') }}">Ajouter un nouveau véhicule</a>
{% endblock %}
