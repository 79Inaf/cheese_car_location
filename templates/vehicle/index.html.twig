{% extends 'base.html.twig' %}

{% block title %}Vehicle index
{% endblock %}

{% block body %}
	<h1>Toutes les voitures</h1>

	{{ form_start(form) }}
	{{ form_widget(form) }}
	<button>Chercher</button>
	{{ form_end(form) }}

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Type</th>
				<th>NombrePlaces</th>
				<th>Annee</th>
				<th>BoiteVitesse</th>
				<th>Energie</th>
				<th>Marque</th>
				<th>Photo</th>
				<th>Kilometrage</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for vehicle in vehicles %}
				<tr>
					<td>{{ vehicle.id }}</td>
					<td>{{ vehicle.type }}</td>
					<td>{{ vehicle.nombrePlaces }}</td>
					<td>{{ vehicle.annee }}</td>
					<td>{{ vehicle.boiteVitesse }}</td>
					<td>{{ vehicle.energie }}</td>
					<td>{{ vehicle.marque }}</td>
					<td><img src="{{ vehicle.photo }}"></td>
					<td>{{ vehicle.kilometrage }}</td>
					<td>
						<a href="{{ path('app_vehicle_show', {'id': vehicle.id}) }}">show</a>
						<a href="{{ path('app_vehicle_edit', {'id': vehicle.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_vehicle_new') }}">Create new</a>
{% endblock %}
