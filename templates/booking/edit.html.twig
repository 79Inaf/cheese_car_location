{% extends 'base.html.twig' %}

{% block title %}Modification
{% endblock %}

{% block body %}
	<div class="d-flex justify-content-evenly">
		<div class="container mt-3">
			<div class="row">
				<div class="mb-3 mx-auto">
					<div class="align-middle">
						<h1 class="text-center m-2">Modifier le calendrier</h1>
						<form class="form-idea form bg-warning rounded-3 p-3 shadow" method="post" action="#anchor">
							{{ form_start(form) }}
							<div class="text-center ">
								{{ form_widget(form)}}
							</div>
							<div class="d-flex justify-content-evenly">
								<button class="btn btn-dark text-warning mt-3">{{ button_label|default('Mettre Ã  jour') }}</button>
								<form method="post" action="{{ path('app_booking_delete', {'id': booking.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
									<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ booking.id) }}">
									<button class="btn btn-dark text-warning ms-4 mt-3">Supprimer</button>
								</form>
							</div>
							{{ form_end(form) }}
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
