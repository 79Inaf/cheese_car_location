{% extends 'base.html.twig' %}

{% block title %}Créneau{% endblock %}

{% block body %}
    <h1>Créneau</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Du</th>
                <td>{{ booking.beginAt ? booking.beginAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Au</th>
                <td>{{ booking.endAt ? booking.endAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ booking.title }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-warning" href="{{ path('app_booking_index') }}">retour à la liste</a>

    <a class="btn btn-warning" href="{{ path('app_booking_edit', {'id': booking.id}) }}">modifier</a>

    {{ include('booking/_delete_form.html.twig') }}
{% endblock %}
